{
  "manifest_version": 3,
  "name": "Youtube Transcript",
  "version": "1.0.0",
  "permissions": ["storage", "activeTab", "sidePanel"],
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "js": ["src/content.tsx"],
      "matches": ["https://www.youtube.com/watch*"]
      
    }
  ],
  "background": {
  "service_worker": "src/background.ts",
  "type": "module"
},
"side_panel": {
    "default_path": "src/sidepanel.html"
  }
}
